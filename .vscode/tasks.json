{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build:dev",
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc",
                "$eslint-stylish"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "statusbar": {
                    "hide": false
                }
            }
        },
        {
            "label": "build:prod",
            "type": "npm",
            "script": "build:prod",
            "group": "build",
            "problemMatcher": [
                "$tsc",
                "$eslint-stylish"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "watch",
            "type": "npm",
            "script": "watch",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$tsc-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "webpack is watching the files",
                        "endsPattern": "compiled .*successfully.*"
                    }
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },

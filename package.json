{
  "name": "srs-writer-plugin",
  "displayName": "SRS Writer",
  "description": "AI-powered Software Requirements Specification writer for VSCode.",
  "version": "0.3.7",
  "publisher": "Testany",
  "repository": {
    "type": "git",
    "url": "https://github.com/Testany-io/srs-writer-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/Testany-io/srs-writer-plugin/issues"
  },
  "homepage": "https://github.com/Testany-io/srs-writer-plugin#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "media/logo.png",
  "files": [
    "dist",
    "rules",
    "media",
    ".templates",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "contributes": {
    "chatParticipants": [
      {
        "id": "srs-writer",
        "name": "srs-writer",
        "description": "Intelligent SRS document generator with natural language understanding",
        "isSticky": true,
        "commands": [
          {
            "name": "create",
            "description": "Create a new SRS document"
          },
          {
            "name": "edit",
            "description": "Edit existing SRS document"
          },
          {
            "name": "lint",
            "description": "Check document quality"
          },
          {
            "name": "help",
            "description": "Show help information"
          },
          {
            "name": "new",
            "description": "Start a fresh conversation session"
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "internet_search",
        "displayName": "Internet Search",
        "toolReferenceName": "internetSearch",
        "canBeReferencedInPrompt": true,
        "modelDescription": "Search the internet for current information using available search providers. Returns structured results with titles, URLs, snippets, and sources.",
        "userDescription": "Use this tool to search the web for real-time information, news, technical documentation, and general knowledge.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query for internet search"
            },
            "maxResults": {
              "type": "integer",
              "description": "Maximum number of search results (default: 5)",
              "default": 5
            },
            "searchType": {
              "type": "string",
              "enum": [
                "general",
                "technical",
                "documentation"
              ],
              "description": "Type of search to perform (default: general)",
              "default": "general"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "custom_rag_retrieval",
        "displayName": "Knowledge Retrieval",
        "toolReferenceName": "customRAGRetrieval",
        "canBeReferencedInPrompt": true,
        "modelDescription": "Retrieve information from enterprise/custom RAG knowledge base system for domain-specific queries.",
        "userDescription": "Search internal knowledge bases and enterprise documentation systems.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query for knowledge retrieval"
            },
            "domain": {
              "type": "string",
              "description": "Business domain context (e.g., 'financial_services', 'healthcare', 'e-commerce')"
            },
            "maxResults": {
              "type": "integer",
              "description": "Maximum number of results to return (default: 5)",
              "default": 5
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "read_local_knowledge",
        "displayName": "Local Knowledge Search",
        "toolReferenceName": "readLocalKnowledge",
        "canBeReferencedInPrompt": true,
        "modelDescription": "Search and read local knowledge files from templates/ and knowledge/ directories in the workspace.",
        "userDescription": "Find relevant templates, examples, and documentation from your local project files.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query to find relevant knowledge files"
            },
            "searchPaths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Paths to search in (default: ['templates/', 'knowledge/'])",
              "default": [
                "templates/",
                "knowledge/"
              ]
            },
            "fileExtensions": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "File extensions to include (default: ['.md', '.yml', '.yaml', '.json'])",
              "default": [
                ".md",
                ".yml",
                ".yaml",
                ".json"
              ]
            },
            "maxResults": {
              "type": "integer",
              "description": "Maximum number of files to return (default: 10)",
              "default": 10
            }
          },
          "required": [
            "query"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "srs-writer.help",
        "title": "SRS Writer: Help"
      },
      {
        "command": "srs-writer.status",
        "title": "SRS Writer: Show Status"
      },
      {
        "command": "srs-writer.startNewProject",
        "title": "SRS Writer: Start New Project"
      },
      {
        "command": "srs-writer.viewArchiveHistory",
        "title": "SRS Writer: View Archive History"
      },
      {
        "command": "srs-writer.toggleAIMode",
        "title": "SRS Writer: Toggle AI/Fallback Mode"
      },
      {
        "command": "srs-writer.forceSyncContext",
        "title": "SRS Writer: Force Sync Context"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SRS Writer",
      "properties": {
        "srs-writer.useAIOrchestrator": {
          "type": "boolean",
          "default": true,
          "description": "启用AI智能工具代理（新架构）"
        },
        "srs-writer.knowledge.localPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "本地知识库路径列表"
        },
        "srs-writer.requirementScaffold.schemaPath": {
          "type": "object",
          "default": {
            "SCHEMA_PATH": "config/schemas/requirement-entity-schemas.yaml"
          },
          "description": "需求实体Schema文件路径配置",
          "properties": {
            "SCHEMA_PATH": {
              "type": "string",
              "description": "需求实体Schema文件路径"
            }
          }
        },
        "srs-writer.projectSwitching.excludeDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "templates",
            "knowledge",
            "node_modules",
            ".git",
            ".vscode",
            "coverage",
            "dist",
            "build"
          ],
          "description": "切换项目时要排除的目录列表",
          "markdownDescription": "在切换项目功能中要排除的目录名称列表。这些目录不会出现在项目选择列表中。\n\n**默认排除**：\n- `templates` - 用户模板目录\n- `knowledge` - 知识库目录\n- `node_modules` - Node.js依赖\n- `.git` - Git仓库\n- `.vscode` - VSCode配置\n- `coverage` - 测试覆盖率报告\n- `dist` - 构建产物\n- `build` - 构建产物"
        },
        "srs-writer.rag.enterprise.enabled": {
          "type": "boolean",
          "default": false,
          "description": "启用企业RAG知识库检索功能",
          "markdownDescription": "启用企业RAG知识库检索功能。\n\n启用后，AI可以通过 `customRAGRetrieval` 工具访问您的企业知识库。\n\n**注意**：需要同时配置服务器地址和认证信息。"
        },
        "srs-writer.rag.enterprise.baseUrl": {
          "type": "string",
          "description": "企业RAG服务器基础URL",
          "markdownDescription": "企业RAG服务器的基础URL地址。\n\n**示例**：\n- `http://192.168.1.100:8080`\n- `https://rag.company.com`\n\n**注意**：请确保URL可以从VS Code所在网络环境访问。"
        },
        "srs-writer.rag.enterprise.appKey": {
          "type": "string",
          "description": "企业RAG应用密钥（App Key）",
          "markdownDescription": "企业RAG系统的应用密钥。\n\n**安全提示**：\n- 请确保密钥的安全性\n- 不要在公开场所分享此密钥\n- 建议定期更换密钥"
        },
        "srs-writer.rag.enterprise.appSecret": {
          "type": "string",
          "description": "企业RAG应用秘钥（App Secret）",
          "markdownDescription": "企业RAG系统的应用秘钥。\n\n**安全提示**：\n- 此为敏感信息，请妥善保管\n- 不要在版本控制中提交此配置\n- 建议定期更换秘钥"
        },
        "srs-writer.rag.enterprise.defaultDatasetId": {
          "type": "string",
          "description": "默认数据集ID",
          "markdownDescription": "企业RAG系统的默认数据集ID。\n\n**说明**：\n- 当AI调用RAG检索时，如果未指定数据集ID，将使用此默认值\n- 可以在具体调用时通过参数覆盖此设置\n- 请确保此数据集ID在您的RAG系统中存在"
        },
        "srs-writer.templates.adcWriter": {
          "type": "object",
          "default": {
            "ADC_WRITER_TEMPLATE": ".templates/ADC/ADC_template.md"
          },
          "description": "Assumptions, Dependencies and Constraints Writer的模板文件路径配置",
          "properties": {
            "ADC_WRITER_TEMPLATE": {
              "type": "string",
              "description": "ADC_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.bizReqAndRuleWriter": {
          "type": "object",
          "default": {
            "BIZ_REQ_AND_RULE_WRITER_TEMPLATE": ".templates/biz_req_and_rule/biz_req_and_rule_template.md"
          },
          "description": "Business Requirement and Rule Writer的模板文件路径配置",
          "properties": {
            "BIZ_REQ_AND_RULE_WRITER_TEMPLATE": {
              "type": "string",
              "description": "BIZ_REQ_AND_RULE_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.frWriter": {
          "type": "object",
          "default": {
            "FR_WRITER_TEMPLATE": ".templates/functional_requirements/functional_requirement_template.md"
          },
          "description": "Functional Requirements Writer的模板文件路径配置",
          "properties": {
            "FR_WRITER_TEMPLATE": {
              "type": "string",
              "description": "FR_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.ifrAndDarWriter": {
          "type": "object",
          "default": {
            "IFR_AND_DAR_WRITER_TEMPLATE": ".templates/IFR_and_DAR/ifr_and_dar_template.md"
          },
          "description": "Interface and Data Requirement Writer的模板文件路径配置",
          "properties": {
            "IFR_AND_DAR_WRITER_TEMPLATE": {
              "type": "string",
              "description": "IFR_AND_DAR_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.nfrWriter": {
          "type": "object",
          "default": {
            "NFR_WRITER_TEMPLATE": ".templates/NFR/nfr_template.md"
          },
          "description": "Non-Functional Requirement Writer的模板文件路径配置",
          "properties": {
            "NFR_WRITER_TEMPLATE": {
              "type": "string",
              "description": "NFR_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.overallDescriptionWriter": {
          "type": "object",
          "default": {
            "OVERALL_DESCRIPTION_WRITER_TEMPLATE": ".templates/overall_description/overall_description_template.md"
          },
          "description": "Overall Description Writer的模板文件路径配置",
          "properties": {
            "OVERALL_DESCRIPTION_WRITER_TEMPLATE": {
              "type": "string",
              "description": "OVERALL_DESCRIPTION_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.prototypeDesigner": {
          "type": "object",
          "default": {
            "PROTOTYPE_DESIGNER_TEMPLATE": ".templates/prototype_designer/prototype_designer_template.md"
          },
          "description": "Prototype Designer的模板文件路径配置",
          "properties": {
            "PROTOTYPE_DESIGNER_TEMPLATE": {
              "type": "string",
              "description": "PROTOTYPE_DESIGNER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.summaryWriter": {
          "type": "object",
          "default": {
            "SUMMARY_WRITER_TEMPLATE": ".templates/summary/summary_template.md"
          },
          "description": "Summary Writer的模板文件路径配置",
          "properties": {
            "SUMMARY_WRITER_TEMPLATE": {
              "type": "string",
              "description": "SUMMARY_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.useCaseWriter": {
          "type": "object",
          "default": {
            "USE_CASE_WRITER_TEMPLATE": ".templates/use_case/use_case_template.md"
          },
          "description": "Use Case Writer的模板文件路径配置",
          "properties": {
            "USE_CASE_WRITER_TEMPLATE": {
              "type": "string",
              "description": "USE_CASE_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.userJourneyWriter": {
          "type": "object",
          "default": {
            "USER_JOURNEY_WRITER_TEMPLATE": ".templates/user_journey/user_journey_template.md"
          },
          "description": "User Journey Writer的模板文件路径配置",
          "properties": {
            "USER_JOURNEY_WRITER_TEMPLATE": {
              "type": "string",
              "description": "USER_JOURNEY_WRITER_TEMPLATE模板文件路径"
            }
          }
        },
        "srs-writer.templates.userStoryWriter": {
          "type": "object",
          "default": {
            "USER_STORY_WRITER_TEMPLATE": ".templates/user_story/user_story_template.md"
          },
          "description": "User Story Writer的模板文件路径配置",
          "properties": {
            "USER_STORY_WRITER_TEMPLATE": {
              "type": "string",
              "description": "USER_STORY_WRITER_TEMPLATE模板文件路径"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn build:prod",
    "prebuild": "yarn generate-specialist-configs",
    "generate-specialist-configs": "npx ts-node scripts/build-specialist-configs.ts",
    "build": "yarn prebuild && webpack --mode development",
    "build:prod": "yarn prebuild && webpack --mode production",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "test:spike": "jest --testPathPattern=spike",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "clean": "rimraf dist",
    "dev": "yarn watch",
    "validate:architecture": "node -e \"console.log('Architecture validation would run here')\"",
    "build:new-architecture": "tsc && webpack --config webpack.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:golden": "node scripts/run-golden-tests.js",
    "validate:prompts": "node scripts/validate-prompt-templates.js",
    "migration:test": "node scripts/test-migration.js",
    "quality:check": "node scripts/quality-check.js"
  },
  "devDependencies": {
    "@cs-au-dk/jelly": "^0.10.0",
    "@types/jest": "^29.x",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^5.x",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "copy-webpack-plugin": "^11.x",
    "dependency-cruiser": "^16.10.3",
    "eslint": "^8.x",
    "jest": "^29.x",
    "rimraf": "^5.x",
    "ts-jest": "^29.x",
    "ts-loader": "^9.x",
    "typescript": "^5.x",
    "webpack": "^5.x",
    "webpack-cli": "^5.x"
  },
  "dependencies": {
    "@types/mdast": "^4.0.4",
    "@vscode/chat-extension-utils": "^0.0.0-alpha.5",
    "github-slugger": "^2.0.0",
    "js-yaml": "^4.1.0",
    "jsonrepair": "^3.12.0",
    "marked": "^9.x",
    "minisearch": "^7.1.2",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-position": "^5.0.0",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.25.76"
  }
}
